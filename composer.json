{
    "name": "wilkques/line-login-sdk-php",
    "description": "LINE Login SDK for PHP",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "ext-curl":"*",
        "wilkques/http-client": "^4.0.0",
        "wilkques/php-helper": "^5.0.0"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Wilkques\\LINE\\": "src"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        }
    },
    "suggest": {
        "wilkques/pkce-php": "Required to use the PKCE with OAuth2.0"
    }
}
